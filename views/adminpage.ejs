<link rel="stylesheet" property="stylesheet" href="css/adminpage.css">

<div class="adminContainer">
    <div class="adminTop"><!-- 유저 검색 Form -->
        <form action="/adminPage?opt=search" method="get" class="adminSearchForm">
            <div class="adminSearchItem">
                <input type="text" name="searchId" placeholder="ID Search">
                <input type="submit" value="Search">
            </div>
        </form>
    </div>
    
    <hr style="border: 0; height: 5px; background: #ccc;">
    
    <div class="adminBottom"><!-- 유저 리스트 표시 -->
        <table class="userTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>이름</th>
                    <th>E-Mail</th>
                    <th>관리자 권한</th>
                    <th>사용가능</th>
                    <th>강퇴</th>
                </tr>
            </thead>
            <tbody>
                <% if (userList.length >= 1) { %><!-- 가입한 유저가 한 명이라도 있는 경우 -->
                    <% for (var i = 0; i < userList.length; i++) { %>
                        <tr>
                            <td><a href="/adminUserInfo?id=<%= userList[i].id %>" style="color: black; text-decoration: none;"><%= userList[i].id %></a></td>
                            <td><%= userList[i].name %></td>
                            <td><%= userList[i].email %></td>
                            <td><input type="button" value="<%= userList[i].admin %>" onclick="location.href='/adminUser?admin=<%= userList[i].admin %>&id=<%= userList[i].id %>'" class="TableUserButton"></td>
                            <td><input type="button" value="<%= userList[i].usetf %>" onclick="location.href='/adminUsing?usetf=<%= userList[i].usetf %>&id=<%= userList[i].id %>'" class="TableUserButton"></td>
                            <td><input type="button" value="강퇴" onclick="location.href='/adminDelete?id=<%= userList[i].id %>'" class="TableUserButton"></td>
                        </tr>
                    <% } %>
                <% } else { %><!-- 가입한 유저가 없는 경우 -->
                <tr>
                    <td colspan="5">
                        검색된 유저가 없습니다.
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>